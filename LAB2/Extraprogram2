}
    

   class  ParaBeha{ 
    public static void main(String args[]){
         Scanner ss= new Scanner (System.in);
        Book b1 = new Book ();
        b1.accepting();
        Book b2= new Book ();
        b2.accepting();
       Book b3 = new Book();
       b3.accepting();
       
       
       
       System.out.println("******* \n ");
       b1.display();
       b2.display();
       b3.display();
       
       
   
    
        //choose(b1,b2,b3);

      {
   
   System.out.println("\n \tEnter the Author Name to get book details:::");
     String authorOpt=ss.next();
    if(authorOpt== b1.author||authorOpt.toUpperCase()==b1.author){
                   b1.display();
                }
                else if(authorOpt== b2.author||authorOpt.toUpperCase()==b2.author){
                   b2.display();

                 }
                else if(authorOpt == (b3.author)||authorOpt.toUpperCase()==b3.author){
                   b3.display();
                }
                else 
                {
                    System.out.println("Please enter the valid author name!!");
                }
       
}
              
         double maxprice=0.0;
     
         if(b1.price>b2.price && b1.price>b2.price){
           maxprice=b1.price;
         }
         else if (b2.price>b1.price&& b2.price> b3.price ){
             maxprice=b2.price;
         }
         else
             maxprice=b3.price;
      System.out.println("The cost of expensive book is " + maxprice);
      
      
      
      
      
      int book2020=0,year=0;
      
      {
           year= b1.year_of_publish ;
          if(year==2020){
              book2020++;
          }
          else{}
          year=b2.year_of_publish;
           if(year==2020){
              book2020++;
          }
           else{}
           year=b3.year_of_publish;
            if(year==2020){
              book2020++;
          }
            else{}
      }
      System.out.println("books published in the year 2020"+book2020);
      
      
      int leastpages=0;
     
         if(b1.no_of_pages>b2.no_of_pages && b1.no_of_pages>b2.no_of_pages){
           maxprice=b1.no_of_pages;
         }
         else if (b2.no_of_pages>b1.no_of_pages&& b2.no_of_pages> b3.no_of_pages ){
             maxprice=b2.no_of_pages;
         }
         else
             maxprice=b3.no_of_pages;
      System.out.println("The cost of expensive book is " + leastpages);
      
      }
            
            
    }

