/*Develop a Java program to create a class Actor with id, name, no_of_movies, no_of_years_exp.
Calculate the average_performance for each of the actor and print the name of the actor with highest average.*/

import java.util.Scanner;

class actor{
 static int id=0;
static int no_of_movies=0;
static int no_of_years_exp=0;
static float average_performance=0;
	
	
	public static void main(String args[]){
		Scanner sc= new Scanner (System.in);
		System.out.println("Enter the number of Actors::");
		int n=sc.nextInt();
		actor []a = new actor[n];
		
		 for(int j=0;j<n;j++){
		 
		 System.out.println("Enter the details of actor"+(j+1));
		 System.out.println("ID::");
		 a[j].id=sc.nextInt();
		 System.out.println("no-of-Movies::");
		 a[j].no_of_movies=sc.nextInt();
		 System.out.println("no_of_years_exp::");
		 a[j].no_of_years_exp=sc.nextInt();
		a[j].average_performance=(a[j].no_of_movies)/(a[j].no_of_years_exp);
		System.out.println("The average performance of actor having id="+a[j].id+"is ::"+a[j].average_performance);
		 }
		 
   }

}

