/*Develop a Java program to create a class PLAYER with member variables name,
matches_played and average. This class has an abstract method cal_average(String,int,int).
Derive two classes BATSMAN and BOWLER from PLAYER. Class BATSMAN has a
member variable runs_scored. Class BOWLER has a member variable runs_given. Create m
BATSMAN objects and n BOWLER objects. Calculate and display the average runs scored
by each BATSMAN and average runs given by each BOWLER.*/
import java.util.Scanner;
class Player{
Scanner sc =new Scanner (System.in);
 static String name="" ;


static int matches_played=0;

static double average=0.0;

/*void cal_average(String,int,int){

}*/
}
class batsman extends Player{
		static int runs_scored =0;
		void getdata(int x){
			int m=x;
			batsman s[]= new batsman[m];
			for(int i=0;i<m;i++){
			System.out.println("Enter the name of Player"+(i+1));
			s[i].name=sc.next();
			System.out.println("Give the no of matches played by <"+s[i].name+">"+" " );
			s[i].matches_played=sc.nextInt();
			System.out.println("Give the runs scored  by <"+s[i].name+">"+" "+ "in " + s[i].matches_played+ " " +"matches" );
			s[i].runs_scored=sc.nextInt();
						}
				}
		void display(int x){
		int m=x;
		batsman s[]= new batsman[m];
			for(int k=0;k<m;k++){
				System.out.println("<------Player's average(batsman)------>");
				System.out.println("Player_name:: "+s[k].name);
				System.out.println("Matches-played::"+s[k].matches_played);
				System.out.println("Run-scored::"+ s[k].runs_scored);
								}
					}
}
class bowler extends Player {
static int runs_given=0;



		void getdata1(int y){
			int n =y;
			bowler g[]= new bowler[n];
				for(int i=0;i<n;i++){
					System.out.println("Enter the name of BOWLER"+(i+1));
					g[i].name=sc.next();
					System.out.println("Give the no of matches played by <"+g[i].name+">"+" " );
					g[i].matches_played=sc.nextInt();
					System.out.println("Give the runs given  by <"+g[i].name+">"+" "+ "in " + g[i].matches_played+ " " +"matches" );
					g[i].runs_given=sc.nextInt();
					}
			}
			void display1(int y){
			int n =y;
				bowler g[]= new bowler[n];
				for(int j=0;j<n;j++){
						System.out.println("<------Player's average(bowler)------>");
						System.out.println("Player_name:: "+g[j].name);
						System.out.println("Matches-played::"+g[j].matches_played);
						System.out.println("Run-given::"+ g[j].runs_given);
						}
				}
	 }

class cricket{
public static void main(String ss[]){
int p,q;
Scanner sc =new Scanner (System.in);
System.out.println("Enter the number of Batsman-->");
			p=sc.nextInt();
			
System.out.println("Enter the number of Bowler-->");
        q =sc.nextInt();			
batsman a= new  batsman();
a.getdata(p);
bowler b =new bowler ();
b.getdata1(q);

System.out.println("--------overall Stat-------");
a.display(p);
b.display1(q);




}
}
